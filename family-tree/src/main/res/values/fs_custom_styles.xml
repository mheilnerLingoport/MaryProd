<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FSApp" parent="@style/Theme.AppCompat.Light">

        <item name="android:actionBarItemBackground" tools:targetApi="14">@drawable/actionbar_selectable_background</item>
        <item name="actionBarItemBackground">@drawable/actionbar_selectable_background</item>

        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_ab_back_fs</item>
        <item name="homeAsUpIndicator">@drawable/ic_ab_back_fs</item>

        <!--<item name="android:dividerVertical">@drawable/abs__list_divider_holo_dark</item>-->
        <!--<item name="dividerVertical">@drawable/abs__list_divider_holo_dark</item>-->

        <item name="actionBarStyle">@style/ActionBar.Solid</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/ActionBar.Solid</item>

        <item name="actionDropDownStyle">@style/ActionBar.DropDownStyle</item>
        <item name="android:actionDropDownStyle" tools:targetApi="11">@style/ActionBar.DropDownStyle</item>

        <item name="dropDownListViewStyle">@style/ActionBar.DropDownListView</item>
        <item name="android:dropDownListViewStyle">@style/ActionBar.DropDownListView</item>

        <item name="actionOverflowButtonStyle">@style/FS.ActionButton.Overflow</item>
        <item name="android:actionOverflowButtonStyle" tools:targetApi="11">@style/FS.ActionButton.Overflow</item>

        <item name="actionModeCloseButtonStyle">@style/NoCloseButton</item>
        <item name="android:actionModeCloseButtonStyle" tools:targetApi="11">@style/NoCloseButton</item>

        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>

    </style>

    <style name="CustomTabPageIndicator" >
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/person_tab_indicator_bg</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>-->
        <item name="android:textSize">23dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#333331</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NoCloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ActionBar.Solid" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBar.Title</item>
        <item name="subtitleTextStyle">@style/ActionBar.SubTitle</item>
        <item name="android:titleTextStyle" tools:targetApi="11">@style/ActionBar.Title</item>
        <item name="android:subtitleTextStyle" tools:targetApi="11">@style/ActionBar.SubTitle</item>
        <item name="android:background">@drawable/actionbar_selectable_background</item>
        <item name="background">@drawable/actionbar_selectable_background</item>
    </style>

    <style name="ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spinner_name_top_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:textColor">@color/action_bar_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ActionBar.SubTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spinner_name_top_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:textColor">@color/action_bar_subtext</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionBar.DropDownStyle" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/actionbar_spinner_selectable_background</item>
        <item name="background">@drawable/actionbar_spinner_selectable_background</item>
    </style>

    <style name="ActionBar.DropDownListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/listitem_selectable_background</item>
    </style>

    <style name="FS.ActionButton.Overflow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_fs</item>
    </style>

    <style name="SpinnerDialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="SplashScreen">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFrame">@null</item>
    </style>

</resources>

